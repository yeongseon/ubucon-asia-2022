@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome UbunCon Asia</h1>
    
    <table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Time
            </th>
            <th>
                Languate
            </th>
            <th>
                Speaker
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.sessionList) {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.StartTime - @item.EndTime
            </td>
            <td>
                @item.Language
            </td>
            <td>
                @item.Speaker
            </td>
        </tr>
}
    </tbody>
    </table>
</div>
